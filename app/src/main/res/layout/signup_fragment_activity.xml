<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/authFragmentContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backfood"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardid"
        android:layout_width="285dp"
        android:layout_height="450dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="6dp"
        app:cardMaxElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <EditText
                android:id="@+id/SignUpReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="REGISTRATION NUMBER"
                android:paddingLeft="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.269"></EditText>

            <EditText
                android:id="@+id/SignUpName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="FULL NAME"
                android:paddingLeft="15dp"
                app:layout_constraintTop_toBottomOf="@+id/SignUpReg"></EditText>

            <EditText
                android:id="@+id/SignUpPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PASSWORD"
                android:paddingLeft="15dp"
                app:layout_constraintTop_toBottomOf="@+id/SignUpName"></EditText>

            <LinearLayout
                android:id="@+id/qwert"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/SignUpPass">

                <Button
                    android:id="@+id/SignUpButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="SIGN UP"></Button>

                <Button
                    android:id="@+id/SignInButton"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:text="ALREADY HAVE AN ACCOUNT"></Button>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>